<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="act_advanced" model="workflow.activity">
            <field name="wkf_id" ref="account.wkf" />
            <field name="name">generate_file()</field>
            <field name="action">generate_file()</field>
            <field name="kind">function</field>
            <field name="signal">open</field>
        </record>

        <record id="t2" model="workflow.transition">
            <field name="act_from" ref="account.act_open" />
            <field name="act_to" ref="act_advanced" />
        </record>

        <record id="t22" model="workflow.transition">
            <field name="act_from" ref="act_advanced" />
            <field name="act_to" ref="account.act_paid" />
            <field name="trigger_model"/>
            <field name="trigger_expr_id"/>
            <field name="condition">reconciled</field>
        </record>

    </data>
</openerp>
